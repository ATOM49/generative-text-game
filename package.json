{
  "name": "talespin",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev:world": "pnpm --filter @talespin/worldbuilder dev",
    "build:world": "pnpm --filter @talespin/worldbuilder build",
    "dev:watcher": "pnpm --filter @talespin/watcher dev",
    "build:watcher": "pnpm --filter @talespin/watcher build:ts",
    "build:schema": "pnpm --filter @talespin/schema build",
    "build:ai": "pnpm --filter @talespin/ai build",
    "build:cdn": "pnpm --filter @talespin/cdn build",
    "build": "pnpm build:schema && pnpm build:ai && pnpm build:cdn && pnpm build:world && pnpm build:watcher",
    "dev": "concurrently \"pnpm dev:world\" \"pnpm dev:watcher\"",
    "clean": "rimraf packages/*/dist apps/*/dist apps/*/node_modules/.cache packages/*/node_modules/.cache",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@langchain/core": "^1.0.2",
    "openai": "^6.8.0",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.1",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.36.0"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "type": "module",
  "packageManager": "pnpm@10.13.1+sha256.0f9ed48d808996ae007835fb5c4641cf9a300def2eddc9e957d9bbe4768c5f28"
}
